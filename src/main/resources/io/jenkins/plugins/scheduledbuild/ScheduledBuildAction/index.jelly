                                                    <input type="hidden" name="taskId" value="${task.id}"/>
                                                    <button type="submit" class="btn-danger">
                                                        ‚úó ÂèñÊ∂à
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    </j:forEach>
                                </tbody>
                            </table>
                        </j:otherwise>
                    </j:choose>
                </div>

                <!-- ÊâÄÊúâÈ¢ÑÁ∫¶ÂéÜÂè≤ -->
                <div class="schedule-list-card">
                    <h2>
                        üìö ÊâÄÊúâÈ¢ÑÁ∫¶ËÆ∞ÂΩï
                        <span class="schedule-count">${it.scheduledBuilds.size()}</span>
                    </h2>
                    <j:choose>
                        <j:when test="${it.scheduledBuilds.isEmpty()}">
                            <div class="no-data">
                                üì≠ ÊöÇÊó†È¢ÑÁ∫¶ËÆ∞ÂΩï
                            </div>
                        </j:when>
                        <j:otherwise>
                            <table class="sortable pane bigtable" style="width: 100%; margin-top: 10px;">
                                <thead>
                                    <tr>
                                        <th style="width: 180px;">È¢ÑÁ∫¶Êó∂Èó¥</th>
                                        <th style="width: 120px;">Áä∂ÊÄÅ</th>
                                        <th>ÊèèËø∞</th>
                                        <th style="width: 200px;">ÂèÇÊï∞</th>
                                        <th style="width: 140px;">Êìç‰Ωú</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <j:forEach var="task" items="${it.scheduledBuilds}">
                                        <tr>
                                            <td>${it.formatDateTime(task.scheduledTime)}</td>
                                            <td>
                                                <j:choose>
                                                    <j:when test="${task.executed}">
                                                        <span class="status-badge status-executed">‚úì Â∑≤ÊâßË°å</span>
                                                    </j:when>
                                                    <j:when test="${task.cancelled}">
                                                        <span class="status-badge status-cancelled">‚úó Â∑≤ÂèñÊ∂à</span>
                                                    </j:when>
                                                    <j:when test="${task.pending}">
                                                        <span class="status-badge status-pending">‚è≥ ÂæÖÊâßË°å</span>
                                                    </j:when>
                                                    <j:otherwise>
                                                        <span class="status-badge status-expired">‚ö† Â∑≤ËøáÊúü</span>
                                                    </j:otherwise>
                                                </j:choose>
                                            </td>
                                            <td>${task.description}</td>
                                            <td>
                                                <div class="param-display">
                                                    ${task.parametersString}
                                                </div>
                                            </td>
                                            <td>
                                                <j:if test="${task.pending}">
                                                    <form method="post" action="cancel" style="display: inline; margin-right: 5px;">
                                                        <input type="hidden" name="taskId" value="${task.id}"/>
                                                        <button type="submit" class="btn-danger">
                                                            ‚úó ÂèñÊ∂à
                                                        </button>
                                                    </form>
