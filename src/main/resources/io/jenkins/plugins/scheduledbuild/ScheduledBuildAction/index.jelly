                    color: #667eea;
                    font-family: 'Courier New', monospace;
                }
                .param-display {
                    background: #f8f9fa;
                    padding: 8px 12px;
                    border-radius: 4px;
                    font-family: 'Courier New', monospace;
                    font-size: 12px;
                    color: #495057;
                    border: 1px solid #e9ecef;
                }
                .checkbox-wrapper {
                    display: flex;
                    align-items: center;
                }
                .checkbox-wrapper input[type="checkbox"] {
                    width: 18px;
                    height: 18px;
                    margin-right: 8px;
                    cursor: pointer;
                }
            </style>
            
            <script type="text/javascript">
                // Âä®ÊÄÅÂÄíËÆ°Êó∂Êõ¥Êñ∞
                function updateCountdowns() {
                    var countdowns = document.querySelectorAll('.countdown');
                    countdowns.forEach(function(elem) {
                        var targetTime = parseInt(elem.getAttribute('data-target'));
                        if (!targetTime) return;
                        
                        var now = new Date().getTime();
                        var diff = targetTime - now;
                        
                        if (diff &lt;= 0) {
                            elem.textContent = 'Âç≥Â∞ÜÊâßË°å...';
                            elem.style.color = '#dc3545';
                            return;
                        }
                        
                        var days = Math.floor(diff / (1000 * 60 * 60 * 24));
                        var hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                        var minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
                        var seconds = Math.floor((diff % (1000 * 60)) / 1000);
                        
                        var result = '';
                        if (days > 0) result += days + 'Â§© ';
                        if (hours > 0 || days > 0) result += hours + 'Â∞èÊó∂ ';
                        if (minutes > 0 || hours > 0 || days > 0) result += minutes + 'ÂàÜ ';
                        result += seconds + 'Áßí';
                        
                        elem.textContent = result;
                        
                        // Ê†πÊçÆÂâ©‰ΩôÊó∂Èó¥ÊîπÂèòÈ¢úËâ≤
                        if (diff &lt; 300000) { // Â∞è‰∫é5ÂàÜÈíü
                            elem.style.color = '#dc3545';
                        } else if (diff &lt; 3600000) { // Â∞è‰∫é1Â∞èÊó∂
                            elem.style.color = '#fd7e14';
                        } else {
                            elem.style.color = '#667eea';
                        }
                    });
                }
                
                // È°µÈù¢Âä†ËΩΩÂêéÁ´ãÂç≥Êõ¥Êñ∞‰∏ÄÊ¨°
                window.addEventListener('DOMContentLoaded', function() {
                    updateCountdowns();
                    // ÊØèÁßíÊõ¥Êñ∞‰∏ÄÊ¨°
                    setInterval(updateCountdowns, 1000);
                });
            </script>
            
            <div class="scheduled-build-container">
                <div class="scheduled-build-header">
                    <h1>‚è∞ È¢ÑÁ∫¶ÊûÑÂª∫ÁÆ°ÁêÜ</h1>
                </div>
            
                <!-- Ê∑ªÂä†Êñ∞È¢ÑÁ∫¶Ë°®Âçï -->
                <div class="add-schedule-card">
                    <h2>üìù Ê∑ªÂä†Êñ∞È¢ÑÁ∫¶</h2>
                    <form method="post" action="schedule">
                        <div class="form-row">
                            <label for="scheduledTime" class="form-label">üìÖ È¢ÑÁ∫¶Êó∂Èó¥ *</label>
                            <input type="datetime-local" 
                                   id="scheduledTime" 
                                   name="scheduledTime" 
                                   required="required"
                                   class="form-input"/>
                            <div class="form-hint">
                                ÈÄâÊã©ÊûÑÂª∫ÊâßË°åÁöÑÊó•ÊúüÂíåÊó∂Èó¥
                            </div>
                        </div>
                        
                        <div class="form-row">
                            <label for="description" class="form-label">üìÑ ÊèèËø∞</label>
                            <input type="text" 
                                   id="description" 
                                   name="description" 
                                   class="form-input"
                                   placeholder="È¢ÑÁ∫¶ËØ¥ÊòéÔºàÂèØÈÄâÔºâ"/>
                            <div class="form-hint">
                                ‰∏∫ËøôÊ¨°È¢ÑÁ∫¶Ê∑ªÂä†ËØ¥ÊòéÔºåÊñπ‰æøÂêéÁª≠ËØÜÂà´
                            </div>
                        </div>
                        
                        <!-- ÂèÇÊï∞ -->
                        <j:if test="${!it.jobParameters.isEmpty()}">
                            <div class="param-section">
                                <h3>üîß ÊûÑÂª∫ÂèÇÊï∞</h3>
                                <j:forEach var="param" items="${it.jobParameters}">
                                    <div class="param-item">
                                        <div class="param-name">${param.name}</div>
                                        <j:choose>
                                            <j:when test="${param.class.simpleName == 'BooleanParameterDefinition'}">
                                                <div class="checkbox-wrapper">
                                                    <input type="checkbox" 
                                                           id="param_${param.name}" 
                                                           name="param_${param.name}"
                                                           value="true"
                                                           checked="${param.defaultValue}"/>
                                                    <label for="param_${param.name}">ÂêØÁî®</label>
                                                </div>
                                            </j:when>
                                            <j:when test="${param.class.simpleName == 'ChoiceParameterDefinition'}">
                                                <select id="param_${param.name}" 
                                                        name="param_${param.name}"
                                                        class="form-select">
                                                    <j:forEach var="choice" items="${param.choices}">
                                                        <option value="${choice}">${choice}</option>
                                                    </j:forEach>
                                                </select>
                                            </j:when>
                                            <j:otherwise>
